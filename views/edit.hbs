<form action="/todos/{{ todo.id }}?_method=PUT" method="POST" class="d-inline">
  <div class="input-group">
    <div class="input-group-text">
      <input type="checkbox" class="form-check-input mt-0" name="isDone" {{#if todo.isDone }} checked {{/if}}>
    </div>
    <input class="form-control" type="text" name="name" value="{{ todo.name }}">
    <button class="btn btn-info" type="submit">save</button>
  </div>
</form>